# stuff where something
#
# Syntactic sugar for
#
#    call $ ->
#      something
#      stuff
#
PREFIX !! 'where' = self f args ->
  end, start = ensure f args 2 2

  code = CodeGenerator (self.child_name '<lambda>') True cell: self
  code.loadop 'POP_TOP'      start delta: 0
  code.loadop 'RETURN_VALUE' end   delta: 0
  self.make_function code list! dict!
  self.loadop 'CALL_FUNCTION' arg: 0 delta: 0
